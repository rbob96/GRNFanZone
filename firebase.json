{
  "database": {
    "rules": {
	  "users": {
        "$uid": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      },
      "rules": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  },
  "hosting": {
    "public": "dist",
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }]
  }
}
