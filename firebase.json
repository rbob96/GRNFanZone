{
  "database": {
    "rules": {
      "posts": {
        ".indexOn": "created_at"
      },
      "users": {
          "$uid": {
            ".read": "auth != null",
            ".write": "$uid === auth.uid"
          }
        },
      "rules": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  },
  "hosting": {
    "public": "dist",
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }]
  }
}
